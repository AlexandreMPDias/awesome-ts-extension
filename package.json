{
	"name": "awesome-ts-extension",
	"displayName": "awesome-ts-extension",
	"description": "Extensions to help usage of Typescript on VsCode",
	"version": "0.0.8",
	"engines": {
		"vscode": "^1.36.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AlexandreMPDias/awesome-ts-extension"
	},
	"categories": [
		"Other"
	],
	"publisher": "AlexandreDias",
	"activationEvents": [
		"onCommand:extension.awesomeDoc",
		"onCommand:extension.awesomifyEditor",
		"onCommand:extension.awesomifyExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
				"command": "extension.awesomeDoc",
				"title": "Awesome Doc"
			},
			{
				"command": "extension.awesomifyEditor",
				"title": "Awesomify"
			},
			{
				"command": "extension.awesomifyExplorer",
				"title": "Awesomify"
			}
		],
		"menus": {
			"editor/context": [{
					"when": "editorTextFocus",
					"command": "extension.awesomeDoc",
					"group": "YourGroup@1"
				},
				{
					"command": "extension.awesomifyEditor",
					"group": "YourGroup@1"
				}
			],
			"explorer/context": [{
				"when": "explorerResourceIsFolder",
				"command": "extension.awesomifyExplorer",
				"group": "YourGroup@1",
				"args": [
					"${relativePath}"
				]
			}]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}